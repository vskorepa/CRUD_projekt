<form class="mt-3" method="post" xmlns="http://www.w3.org/1999/html">
    <div class="form-group row">
        <label for="oldpassw" class="col-sm-2 col-form-label">Old password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="oldpassw" id="oldpassw" required placeholder="Staré heslo">
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">New password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="password" id="password" required placeholder="Nové heslo">
        </div>
    </div>
    <div class="form-group row">
        <label for="checkpassw" class="col-sm-2 col-form-label">Confirm password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="checkpassw" id="checkpassw" required placeholder="Potvrďte heslo">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="hidden" name="action" value="changepassw">
            <input type="submit" value="Změnit heslo" class="btn btn-primary"/>
        </div>
    </div>
</form>