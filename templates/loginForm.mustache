<form class="mt-3" method="post" xmlns="http://www.w3.org/1999/html">
    <div class="form-group row">
        <label for="login" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="login" id="login" required placeholder="Přihlašovací jméno">
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="password" id="password" required placeholder="Heslo">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="hidden" name="action" value="login">
            <input type="submit" value="Přihlásit" class="btn btn-primary"/>
        </div>
    </div>
</form>